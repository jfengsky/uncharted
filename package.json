{
  "name": "uncharted",
  "version": "1.0.0",
  "description": "typescript 开发环境",
  "main": "index.js",
  "scripts": {
    "clear": "rm -rf js/*.*",
    "tsc": "npm run clear && tsc",
    "tscw": "tsc --watch",
    "client": "node-dev dist/client.js",
    "start:server": "node js/server/index.js",
    "start:client": "npm run watch:client & npm run client",
    "watch": "webpack --config build/webpack.config.babel.js --progress --colors --watch",
    "watch:client": "webpack --config build/webpack.config.client.babel.js --progress --colors --watch",
    "prettier-code": "lint-staged",
    "pushpkg": "git add -A && git commit -m auto-pkg && git push origin master",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "linters": {
      "ts/**/*.js": [
        "prettier-standard",
        "git add"
      ]
    }
  },
  "pre-commit": [
    "prettier-code"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jfengsky/uncharted.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jfengsky/uncharted/issues"
  },
  "homepage": "https://github.com/jfengsky/uncharted#readme",
  "devDependencies": {
    "@types/express": "^4.0.35",
    "@types/react": "^15.0.27",
    "@types/react-dom": "^15.5.0",
    "@types/react-redux": "^4.4.42",
    "@types/react-router": "^4.0.11",
    "@types/react-router-dom": "^4.0.4",
    "antd": "^2.10.4",
    "awesome-typescript-loader": "^3.1.3",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "express": "^4.15.3",
    "lint-staged": "^3.6.0",
    "pre-commit": "^1.2.2",
    "prettier-standard": "^5.0.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "redux": "^3.6.0",
    "source-map-loader": "^0.2.1",
    "ts-loader": "^2.1.0",
    "typescript": "^2.3.4",
    "webpack": "^2.6.1",
    "webpack-node-externals": "^1.6.0"
  }
}
